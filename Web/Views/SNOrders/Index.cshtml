
@{
    ViewBag.Title = "Scan";
}
@model ShippingService.Business.EF.Facade.SNOrders.VMBarcodeScan
<div class="page-header">
    <h2>1. Scan SN order id</h2>
</div>

@foreach(var error in Model.Errors)
{ 
    <div class="alert alert-danger" role="alert">
        <div>
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <span>@error</span>
        </div>
    </div>
}
    
@using(Html.BeginForm("BarcodeScan", "SNOrders", FormMethod.Get, new { @class="form-inline" }))
{
    <div class="form-group">
        <img src="@Url.Content("~/")Images/barcode-scanner.jpg" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="orderid" id="orderid" placeholder="Order id" value="@Model.OrderId">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
}


   
